<div class="form-group">
  <%= text_field_tag :company_name, '', name: 'user[client_attributes][company_name]', class: 'form-control', placeholder: "Company Name" %>
</div>  
<div class="form-group">  
  <%= text_field_tag :company_email, '', name: 'user[client_attributes][company_email]', class: 'form-control', placeholder: "Company email" %>
</div>  
<div class="form-group">
  <%= text_field_tag :official_website, '', name: 'user[client_attributes][official_website]', class: 'form-control', placeholder: "Official Website" %>
</div>  
<div class="form-group">
  <%= country_select("user", "country", {selected: "US"}, {name: 'user[client_attributes][country_id]', class: 'form-control'}) %>
</div>  
<div class="form-group">  
  <%= text_field_tag :zip, '', name: 'user[client_attributes][zip]', placeholder: "ZIP/Postalcode", class: 'form-control' %>
</div>  
<div class="form-group">  
  <%= check_box_tag :accept, 'yes', false, name: 'user[terms_of_service]' %>
   I agree to the Topcat.com <a href="javascript:void(0);">Terms & Conditions.</a>
</div>

<script>
  $("#company_name").rules('add', {
    required: true,
    messages: {
      required: "Enter Company Name"
    }
  });
  
  $("#company_email").rules('add', {
    required: true,
    email: true,
    messages: {
      required: "Enter Company email",
      email: "Please Enter a valid email"
    }
  });

  $("#official_website").rules('add', {
    required: true,
    messages: {
      required: "Enter Official Website"
    }
  });


  $("#zip").rules('add', {
    required: true,
    messages: {
        required: "Enter Zip Code"
    }
  });

  $("#accept").rules('add', {
    required: true,
    messages: {
      required: "Please Accept Terms & Conditions"
    }
  });
</script>

